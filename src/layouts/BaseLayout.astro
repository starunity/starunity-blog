---
import HeadCommon from '../components/HeadCommon.astro'
import NetlifyIdentity from '../components/NetlifyIdentity.astro'

export interface Props {
  title: string
  lang?: string
}

const { title, lang } = Astro.props as Props
---

<!DOCTYPE html>
<html lang={lang || 'en'} data-theme="night">
  <head>
    <HeadCommon />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <NetlifyIdentity client:load />
  </body>
</html>

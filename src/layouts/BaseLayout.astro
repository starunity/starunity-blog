---
import HeadCommon from '../components/HeadCommon.astro'
import { SITE } from '../config'

export interface Props {
  title: string
  lang?: string
}

const { title, lang } = Astro.props as Props
---

<!DOCTYPE html>
<html lang={lang || SITE.defaultLanguage} data-theme="night">
  <head>
    <HeadCommon />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

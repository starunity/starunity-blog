---
export interface Props {
  title: string
  lang?: string
}

const { title, lang } = Astro.props as Props
---

<!DOCTYPE html>
<html lang={lang || 'en'}>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{title}</title>
  </head>
  <body>
    <slot></slot>
  </body>
</html>

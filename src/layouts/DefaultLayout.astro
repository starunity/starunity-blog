---
import BaseLayout from './BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { NAVIGATOR } from '../config'

export interface Props {
  title?: string
  lang?: string
}

const { title, lang } = Astro.props as Props

const { name } = NAVIGATOR
---

<BaseLayout title={title || name} lang={lang}>
  <div class="container mx-auto md:w-4/6 lg:w-3/6">
    <Header />
    <main class="mb-4">
      <slot />
    </main>
    <Footer />
  </div>
</BaseLayout>
